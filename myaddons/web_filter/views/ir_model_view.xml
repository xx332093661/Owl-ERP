<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="model_form_view" model="ir.ui.view">
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='field_id']/tree//field[@name='index']" position="after">
                <field name="search_able"/>
            </xpath>
            <xpath expr="//field[@name='field_id']/form//field[@name='index']" position="after">
                <field name="search_able"/>
            </xpath>
        </field>
    </record>

</odoo>