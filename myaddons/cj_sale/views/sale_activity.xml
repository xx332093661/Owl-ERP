<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cj_sale_activity_tree_view" model="ir.ui.view">
            <field name="name">营销活动</field>
            <field name="model">cj.sale.activity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="principal"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="cj_sale_activity_form_view" model="ir.ui.view">
            <field name="name">营销活动</field>
            <field name="model">cj.sale.activity</field>
            <field name="arch" type="xml">
                <form string="营销活动">
                     <header>
                        <button name="action_confirm" string="确认" states="draft" type="object" class="oe_highlight" groups="sales_team.group_sale_salesman"/> <!--采购专员确认-->
                        <button name="action_sale_user_refuse" string="驳回" states="sale_manager_confirm" type="object" groups="sales_team.group_account_manager"/>
                        <button name="action_sale_manager_confirm" string="销售经理确认" states="confirm" type="object" class="oe_highlight" groups="sales_team.group_sale_manager"/> <!--销售经理确认-->
                         <button name="action_sale_user_confirm" string="财务经理确认" states="sale_manager_confirm" type="object" class="oe_highlight" groups="account.group_account_manager"/>  <!--财务经理确认-->
                        <button name="action_cancel" string="取消申请" states="confirm,sale_user_refuse" type="object" groups="purchase.group_purchase_user"/>
                        <button name="action_draft" string="设为草稿" states="confirm" type="object" groups="purchase.group_purchase_user"/>
                        <button name="action_draft" string="设为草稿" states="sale_user_refuse,cancel" class="oe_highlight" type="object" groups="sales_team.group_sale_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,sale_manager_confirm,account_manager_confirm,done"/>
                    </header>

                    <sheet>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="code"/>
                                <field name="channels_ids" widget="many2many_tags"/>
                                <field name="flow_id"/>
                            </group>
                            <group>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="principal" options="{'no_create_edit': True, 'no_create':True}"/>
                            </group>
                            <field name="description" placeholder="描述"/>
                            <field name="active" string="有效"  invisible="1" />
                            <field name="line_ids">
                                  <tree>
                                         <field name="product_id" />
                                         <field name="unit_price" />
                                         <field name="product_qty" />
                                         <field name="order_limit_qty" />
                                         <field name="used_qty"   />
                                  </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cj_sale_activity_action" model="ir.actions.act_window">
            <field name="name">营销活动</field>
            <field name="res_model">cj.sale.activity</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="cj_sale_activity_menu" name="营销活动" parent="sale.menu_sales_config" sequence="6"
                  action="cj_sale_activity_action"/>

    </data>
</odoo>
