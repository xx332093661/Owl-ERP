<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_valuation_wizard" model="ir.ui.view">
            <field name="name">存货估值</field>
            <field name="model">valuation.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': 1, 'no_open': 1}"/>

                    </group>
                    <group>
                        <group>
                            <field name="show_type"/>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="stock_type"/>
                        </group>
                    </group>
                    <group>
                        <label for="product_ids"/>
                        <div>
                            <field name="product_ids" widget="many2many_tags"  options="{'no_open': 1, 'no_create': 1}"/>
                            <field name="product_file" nolabel="1" class="oe_inline"/>
                            <a href="/cj_stock/static/template/import_valuation_product.xlsx" target="_blank">模板下载</a>
                        </div>
                    </group>
                    <footer>
                        <button name="button_ok" string="查询" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_valuation_wizard" model="ir.actions.act_window">
            <field name="name">存货估值</field>
            <field name="res_model">valuation.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_valuation_wizard"/>
            <field name="target">new</field>
        </record>

        <record model="ir.ui.menu" id="stock_account.menu_valuation">
            <field name="action" ref="action_valuation_wizard"/>
            <field name="name">存货估值</field>
        </record>
    </data>
</odoo>

